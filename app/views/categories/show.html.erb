<%- model_class = Category -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<p>
  <strong><%= model_class.human_attribute_name(:name) %>:</strong>
  <%= @category.name %>
</p>

<p>
  <strong><%= model_class.human_attribute_name(:type_description) %>:</strong>
  <%= @category.type_description %>
</p>

<p>
  <strong><%= model_class.human_attribute_name(:sub_categories) %>:</strong>
  <%= raw(@category.sub_categories.sort_by{|e| e.name}.map{|p| link_to p.name, category_sub_category_path(@category,p.id)}.join(", ")) %>.

</p>

<%= link_to t('.back', :default => t("helpers.links.back")),
            categories_path, :class => 'btn btn-mini' %>

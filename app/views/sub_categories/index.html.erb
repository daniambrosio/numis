<p id="notice"><%= notice %></p>

<h1>Listing Sub Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sub_categories.each do |sub_category| %>
      <tr>
        <td><%= sub_category.name %></td>
        <td><%= link_to 'Show', category_sub_category_path(:category_id => @category.id, :id => sub_category.id) %></td>
        <td><%= link_to 'Edit', edit_category_sub_category_path(:category_id => @category.id, :id => sub_category.id) %></td>
        <td><%= link_to 'Destroy', category_sub_category_path(:category_id => @category.id, :id => sub_category.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


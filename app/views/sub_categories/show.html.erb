<%- model_class = SubCategory -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<p>
  <strong><%= model_class.human_attribute_name(:name) %>:</strong>
  <%= @sub_category.name %>
</p>


<%= link_to "Lista de Sub Categorias de '#{@category.name}'",
            category_sub_categories_path(:category_id => @category.id), :class => 'btn btn-mini' %>
<%= link_to  "Categoria '#{@category.name}'",
            category_path(@category), :class => 'btn btn-mini' %>

